
<h2>Your Sections:</h2>

<%# This displays a list of sections that belong to the user %>
<% @all = Section.all %>
<% array_of_sections = [] %>
<% @all.each do |section| %>
	<% if session[:user_id] == section[:user_id] %>
		<% array_of_sections << section %>
	<% end %>
<% end %>
<% array_of_sections = array_of_sections.sort %>

<% array_of_sections.each do |section| %>
		<form action="/sections/<%=section[:period_number]%>" method="POST">
			<input id="section" type="hidden" name="section" value="<%=section[:period_number]%>">
			<input type="submit" value="Section: <%=section[:period_number]%>">
		</form>
		<br>
<% end %>

<form action="/sections" method="POST">
	<input id="period_number" type="integer" name="period_number" placeholder="Enter a number">
	<input type="submit" value="Add a Section">
</form>