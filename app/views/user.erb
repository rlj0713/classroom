<h2>Your Sections:</h2>

<% @all = Student.all %>
<% array_of_sections = [] %>
<% @all.each do |section| %>
	<% if !array_of_sections.include?(section[:section]) %>
		<% array_of_sections << section[:section] %>
	<% end %>
<% end %>

<% array_of_sections.each do |section| %>
	<a href="/user/<%=current_user[:id]%>/sections/<%=section%>"><%= section %></a><br><br>
<% end %>


<form action="/user" method="POST">
	<input id="section" type="integer" name="section" placeholder="Student Section">
	<input type="submit" value="Add a Section">
</form>