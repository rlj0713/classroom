<h1>This is Section <%= params[:id].to_i %></h1>

<h2>Students:</h2>

<% @all = Student.all %>
<% array_of_students = [] %>
<% @all.each do |student| %>
    <% if student[:section] == params[:id].to_i %>
        <% array_of_students << student %>
    <% end %>
<% end %>
<% array_of_students = array_of_students.sort_by {|obj| obj.score} %>
<% array_of_students.each do |student| %>    
    <ul> <%= student[:name] %> - <%= student[:score] %>     <button>Delete</button></ul>
<% end %>


